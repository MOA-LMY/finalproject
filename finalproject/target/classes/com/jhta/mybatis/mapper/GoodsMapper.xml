<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
  <mapper  namespace="com.jhta.mybatis.mapper.GoodsMapper" >
  	
  	<insert id="insert" parameterType="goods">
  	
  	insert into goods values(goods_seq.nextval,#{g_name},#{g_price},#{g_content},#{g_orgimg},
  	#{g_saveimg},sysdate,#{g_hit},#{g_ea},#{g_info},#{gc_num})
  	
  	</insert>
  	
  	
  <select id="list" resultType="goods">
 
 	select * from goods 
 
  </select>
  
  <select id="find" parameterType="int" resultType="goods">
  
		select * from goods where g_num=#{g_num}
		
	</select>
  
  <delete id="delete" parameterType="int">
  
  	delete from goods where g_num=#{g_num} 
  	
  </delete>	
  
  <update id="update" parameterType="goods">
  
  	update goods set
  	g_name=#{g_name},g_price=#{g_price},g_content=#{g_content}
	  	<if test="g_orgimg!=null">
	  	,g_orgimg=#{g_orgimg}
	  	,g_saveimg=#{g_saveimg}
	  	</if>
  	,g_ea=#{g_ea},g_info=#{g_info} where g_num=#{g_num}
  </update>
  
  </mapper>